<GrpSheet 
    about="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet"
    xmlns="http://openurc.org/ns/gsheet-2"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:dcterms="http://purl.org/dc/terms/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"    
    xsi:schemaLocation="http://openurc.org/ns/gsheet-2 http://openurc.org/ns/gsheet-2
        http://purl.org/dc/elements/1.1/ http://dublincore.org/schemas/xmls/qdc/2006/01/06/dc.xsd 
        http://purl.org/dc/terms/ http://dublincore.org/schemas/xmls/qdc/2006/01/06/dcterms.xsd">

    <dcterms:conformsTo>http://openurc.org/ns/gsheet-2/isoiec24752-5-2013</dcterms:conformsTo>
    <dc:publisher>OpenURC Alliance</dc:publisher>
    <dc:creator>Gorka Epelde</dc:creator>
    <dc:rights>Copyright 2015 openURC Alliance. Licensed under CC-BY 4.0, see https://creativecommons.org/licenses/by/4.0/.</dc:rights>
    <dc:title xml:lang="en">Grouping sheet for the TV set</dc:title>
    <dcterms:modified>2015-12-06</dcterms:modified>
    <scents>
        <forDomain>http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis</forDomain>
        <forLang>en</forLang>
    </scents>
    
    <!-- Grouping resources -->
    <grpItems>
        <Grouping about="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#grouping">
            <forDomain>http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis</forDomain>
            <mainGroup resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#channelAndVolumeGroup"/>
            <groups>
                <Group about="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#channelAndVolumeGroup">
                    <cohesion>weak</cohesion>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#volume"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#mute"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#activeChannel"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#channelList"/>                  
                    <groupRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#powerControlGroup"/>
                    <groupRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#timeShiftControlGroup"/> 
                    <groupRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#tvRecordingControlGroup"/>                                      
                </Group>
                <Group about="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#powerControlGroup">
                    <cohesion>weak</cohesion>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#powerMode"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#togglePower"/> 
                </Group>
                <Group about="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#timeShiftControlGroup">
                    <cohesion>normal</cohesion>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#tvStatus"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#playTV"/>              
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#stopTV"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#pauseTV"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#resumeTV"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#resumeLiveTV"/>
                </Group>         
                <Group about="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.gsheet#tvRecordingControlGroup">
                    <cohesion>normal</cohesion>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#tvIsRecording"/>
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#recordTV"/>              
                    <eltRef resource="http://openurc.org/TPL/tv-set-1.0/tv-set-basic.uis#stopRecordingTV"/>                  
                </Group>                  
            </groups>
        </Grouping>       
       
        <!-- The labels for the groups are specified in a resource sheet. -->

    </grpItems>
</GrpSheet>